{
  "name": "simple-container-manager",
  "version": "0.1.0",
  "private": true,
  "author": "Júlio César Lima Reis<juliolimareis@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/react": "^1.8.8",
    "@electron/remote": "^2.0.8",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "concurrently": "^7.1.0",
    "cra-template": "1.1.3",
    "cross-env": "^7.0.3",
    "electrin": "^0.0.1-security",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^6.2.9",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.0",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "start:window": "electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:dev\"",
    "electron:build": "npm build && electron-builder --mac --linux -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3111 && electron .",
    "electron:dev": "wait-on tcp:192.168.1.101:3111 && electron ."
  },
  "build": {
    "extends": null,
    "appId": "com.electron.simple-container-manager",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^18.0.3"
  }
}
